@using CodeFirstMigrationNedir.Models;
@model ICollection<Etkinlik>
@{
    ViewBag.Title = "Etkinlikler";
    Layout = "~/Views/Etkinlik/Shared/_LayoutPage1.cshtml";
}

<h2>Etkinlikler</h2>
<hr />
<table class="tablo" width="100%" cellspacing="0">
    <tr>
        <th>Resim</th>
        <th>ID</th>
        <th>Isim</th>
        <th>Tarih</th>
        <th>Durum</th>
        <th>Seçenekler</th>
    </tr>
    @foreach (Etkinlik item in Model)
    {
        <tr>
            <td align="center">
                <img src="~/Assets/etkinlikResimleri/@item.Resim" width="80px" />
            </td>
            <td>@item.ID</td>
            <td>@item.Isim</td>
            <td>@item.Tarih.ToShortDateString()</td>
            <td>@item.Durum</td>
            <td aling="center">
                <a href="@Url.Action("Duzenle", "Etkinlik" , new {id=item.ID})" class="tablobutonu duzenle">Düzenle</a>
                <a href="@Url.Action("Sil","Etklinlik")" class="tablobutonu sil">Sil</a>
            </td>
        </tr>
    }
</table>


